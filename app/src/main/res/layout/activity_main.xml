<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.darwindeveloper.calendar2weeksview.MainActivity">

    <!--app:startYear="2017" y app:endYear="2017" mostrara un calendario con los meses del año 2017-->
    <!--app:startYear="2017" y app:endYear="2017" mostrara un calendario con los meses del año 2017 y 2018-->
    <com.darwindeveloper.calendar2weekslibrary.DSMRCalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundColorBadge="@color/colorAccent"
        app:backgroundColorCalendar="#ffffff"
        app:backgroundColorCurrentDay="#0099cc"
        app:backgroundColorDays="#f5f5f5"
        app:endYear="2017"
        app:headerBackgroundColor="@color/colorAccent"
        app:labelDaysColor="#0099cc"
        app:paddingHeader="7dp"
        app:startYear="2017"
        app:topBackgroundColor="@color/colorPrimary" />


</LinearLayout>
